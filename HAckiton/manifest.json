{
    
      "manifest_version": 2,
      "name": "Borderify",
      "version": "1.0",
    
      "description": "Adds a red border to all webpages matching mozilla.org.",
    
      "icons": {
        "48": "close.png"
      },
    
      "content_scripts": [
        {
          "matches": ["*://*.mozilla.org/*"],
          "js": ["main.js"],
          "html":["index.html"]
        }
      ],
    
    "applications":{
        "gecko": {
          "id":"mohit@graxy.com"
        }
    }
  }
